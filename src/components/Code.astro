---
const { language, code } = Astro.props;
---

<section class="code-container">
  <header class="code-header">
    <span class="code-language">{language}</span>
    <div>
      <button id="copy-button" class="copy-button" onclick="copyToClipboard()"
        >Copy</button
      >
    </div>
  </header>
  <hr class="code-hr" />
  <pre id="code-block" class="code-block">
    <code>{code}</code>
  </pre>
</section>

<style>
  .code-container {
    margin: 0 0 1rem 0;
    padding: 0.5rem;
    border-radius: 7px;
    background: rgba(var(--accent-light), 12%);
    border: 1px solid rgba(var(--accent-light), 25%);
  }

  .code-header {
    width: 100%;
    height: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .code-block {
    display: flex;
    margin: 0 0 0 0.5rem;
    padding: 0;
    font-size: 1rem;
  }

  .code-language {
    font-size: 1rem;
    margin: 0 0 0 0.5rem;
    font-family: var(--font-mono);
    color: rgb(var(--accent-blue-light));
  }

  .copy-button {
    display: none;
    background-color: rgba(var(--accent-light), 25%);
    color: rgb(var(--accent-light));
    border: none;
    border-radius: 4px;
    margin: 0;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .code-container:hover .copy-button {
    display: inline-flex;
  }
</style>

<script is:inline>
  async function copyToClipboard() {
    const codeBlock = document.getElementById("code-block");
    const copyButton = document.getElementById("copy-button");

    await navigator.clipboard
      .writeText(codeBlock.innerText)
      .then(() => {
        copyButton.innerText = "Copied!";
        setTimeout(() => {
          copyButton.innerText = "Copy";
        }, 2000);
      })
      .catch(() => {
        copyButton.innerText = "Failed to copy!";
        setTimeout(() => {
          copyButton.innerText = "Copy";
        }, 2000);
      });
  }
</script>
